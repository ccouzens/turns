{
	"$schema": "./node_modules/turbo/schema.json",
	"tasks": {
		"biome": {
			"dependsOn": ["^biome"]
		},
		"prettier": {
			"dependsOn": ["^prettier"]
		},
		"format": {
			"dependsOn": ["biome", "prettier", "^format"]
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"check": {
			"dependsOn": [
				"check-biome",
				"check-prettier",
				"check-superhtml",
				"check-types",
				"^check"
			]
		},
		"check-biome": {
			"dependsOn": ["^check-biome"]
		},
		"check-prettier": {
			"dependsOn": ["^check-prettier"]
		},
		"check-superhtml": {
			"inputs": ["index.html"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"preview": {
			"dependsOn": ["build"],
			"persistent": true,
			"cache": false
		},
		"superhtml": {
			"inputs": ["index.html"]
		}
	}
}
