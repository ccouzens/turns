{
  "$schema": "./node_modules/turbo/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "check": {
      "dependsOn": [
        "check-types",
        "^check"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "preview": {
      "dependsOn": [
        "build"
      ],
      "persistent": true,
      "cache": false
    }
  }
}